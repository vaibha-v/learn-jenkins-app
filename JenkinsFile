pipeline {
    agent any

    stages {
        stage('Build') {    
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo 'Hello World with docker'
                    ls -la
                    node -v 
                    nmp -v
                    npm run build
                    ls -la
                '''
            }
        }
    }
}
